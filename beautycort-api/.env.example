# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Generate a secure random secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-MUST-CHANGE-IN-PRODUCTION
JWT_EXPIRES_IN=7d

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# CRITICAL SECURITY WARNING:
# NEVER commit the service key to version control!
# Store it in environment variables or secure secret management
SUPABASE_SERVICE_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Payment Gateway (optional)
# Tap Payment Gateway for Jordan market
TAP_SECRET_KEY=
TAP_PUBLIC_KEY=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications (Expo)
EXPO_PUSH_TOKEN=

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=beautycort-uploads
